@model Tennis.ViewModels.Competitions.PlayerAddViewModel
@{
    ViewData["Title"] = "Player";
}

<div class="row">
    <h2>Add Player to @Model.ClubName</h2>
    
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <form asp-controller="Club" asp-action="AddPlayer" asp-route-clubId="@Model.ClubId" method="post">
            <div class="form-group">
                <label class="col-xs-12 col-sm-2 col-md-1 col-lg-1 control-label" asp-for="@Model.FirstName"></label>
                <div class="col-xs-12 col-sm-10 col-md-11 col-lg-11">
                    <input class="form-control" asp-for="FirstName" value="@Model.FirstName"/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-12 col-sm-2 col-md-1 col-lg-1 control-label" asp-for="@Model.LastName"></label>
                <div class="col-xs-12 col-sm-10 col-md-11 col-lg-11">
                    <input class="form-control" asp-for="LastName" value="@Model.LastName"/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-12 col-sm-offset-2 col-sm-10 col-md-offset-1 col-md-11 col-lg-offset-1 col-lg-11">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </div>
        </form>
    </div>
</div>